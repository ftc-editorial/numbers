  <div class="o-header__bottom">
    <div class="o-header__container">
      <div class="o-header__left">
        <div class="o-header__logo">
          <a class="o-header__logo-link" href="http://www.ftchinese.com" title="前往FT中文网首页"><span>FT中文网</span><img src="{{{article.assetsPath}}}svg/brand-ftc-square.svg" target="_blank"></a>
        </div>        
      </div>

      <div class="o-header__center">
        
        <div class="o-header__title">
          <span class="o-header__headline">{{article.articleHeadline}}</span>
          {{# article.englishEdition}}
            <a class="o-header__edition" href="{{{href}}}" target="_blank">{{text}}</a>
          {{/ article.englishEdition}}          
        </div>
        
        <a class="o-header__masthead" href="http://www.ftchinese.com"><img src="{{{article.assetsPath}}}svg/brand-ftc-masthead.svg"></a>
        
      </div>

      <nav class="o-header__right" data-o-component="o-toggler">

        <button class="o-header__nav-toggle" for="menu-toggler" data-o-toggler-button aria-controls="o-header__nav"><span>目录</span></button>
        
        <ol class="o-header__nav" data-o-toggler-target>

          {{# article.sections}}
          <li class="o-header__nav-item">
            <a class="o-header__nav-link bdr--{{theme}}" href="#{{sectionId}}">{{title}}</a>
          </li>
          {{/ article.sections}}

          {{# article.englishEdition}}
          <li class="o-header__nav-item mobile">
            <a class="o-header__edition" href="{{{href}}}" target="_blank">{{text}}</a>
          {{/ article.englishEdition}}
          </li>
        </ol>           
      </nav>         
    </div><!-- o-header__container -->    
  </div><!-- o-header__bottom -->

</header>